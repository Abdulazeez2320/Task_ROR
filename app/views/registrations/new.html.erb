<!-- app/views/registrations/new.html.erb -->

<div class="text-center form-container p-6 bg-gradient-to-br from-purple-200 via-slate-50 to-lime-50 shadow-md rounded-lg max-w-md mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-6">Sign Up</h1>

  <%= form_with(model: @user, url: registrations_path, local: true) do |f| %>

    <!-- Display error message of form -->
    <% if f.object.errors&.full_messages.any? %>
      <ul class="bg-red-100 border border-red-400 text-red-800 px-4 py-2 rounded mb-4 text-left">
        <% f.object.errors.full_messages.each do |msg| %>
          <li class="list-disc list-inside"><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <!-- Name Field -->
    <div class="mb-4 text-left">
      <%= f.label :name, class: "block text-sm font-medium mb-1 text-black" %>
      <%= f.text_field :name, placeholder: "Please enter name", class: "w-full border-gray-400 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 px-4 py-2 border text-black hover:scale-105 transition duration-300" %>
    </div>

    <!-- Email Field -->
    <div class="mb-4 text-left">
      <%= f.label :email, class: "block text-sm font-medium mb-1 text-black" %>
      <%= f.text_field :email, placeholder: "Please enter email id", class: "w-full border-gray-400 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 px-4 py-2 border text-black hover:scale-105 transition duration-300" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4 text-left">
      <%= f.label :password, class: "block text-sm font-medium mb-1 text-black" %>
      <%= f.password_field :password, placeholder: "Please enter password", class: "w-full border-gray-400 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 px-4 py-2 border text-black hover:scale-105 transition duration-300" %>
    </div>

    <!-- Password Confirmation -->
    <div class="mb-4 text-left">
      <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1 text-black" %>
      <%= f.password_field :password_confirmation, placeholder: "Please enter password confirmation", class: "w-full border-gray-400 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 px-4 py-2 border text-black hover:scale-105 transition duration-300" %>
    </div>

    <!-- Submit Button -->
    <div class="mt-6">
      <%= f.submit "Sign Up", class: "w-full bg-gradient-to-br from-lime-50 via-slate-50 to-purple-200 hover:from-purple-200 hover:to-lime-50 text-black font-semibold py-2 px-4 rounded-md transition duration-300 shadow-sm hover:shadow-md hover:scale-105" %>
    </div>
    <!-- Login link here -->
<div class="text-center text-sm text-black mt-4">
  Already have an account?
  <%= link_to "Signin", new_session_path, class: "underline font-medium text-blue-400 hover:text-blue-600" %>
</div>

  <% end %>
</div>
