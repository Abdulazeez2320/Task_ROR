<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>

<head>
  <title>UserAuth</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

 
  <%= javascript_importmap_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
  <!-- Toast Container -->
  <div id="flash-toast-container" class="fixed bottom-5 right-5 z-50 flex flex-col gap-4 items-end pointer-events-none">
  <%= render 'layouts/flash' %>
  </div>


  <% if user_signed_in? %>
  <div class="flex align-center justify-end p-4 bg-gray-800 text-white">
    <%= button_to "Sign out", session_path(session), method: :delete, class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"%>
  </div>
  <% end %>

  <%= yield %>
</body>

</html>